{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../shared/src/*"]
        }
    },
    "include": ["env.d.ts", "src/**/*", "vite.config.ts", "src/**/*.vue", "../shared/src/**/*.ts", "tailwind.config.ts"],
    "exclude": ["src/**/__tests__/*"]
}
